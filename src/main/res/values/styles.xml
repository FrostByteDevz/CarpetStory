<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Font_CopperPlate_Title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/copperplate</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Font_CopperPlate_SubTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/copperplate</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="Theme.NoPreviewWindow" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
